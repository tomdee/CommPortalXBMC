<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.advanced.commportal"
       name="CommPortal"
       version="1.0.0"
       provider-name="Tom Denham">
  <requires>
        <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.service"
             library="autostart.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">CommPortal</summary>
    <description lang="en">Get notified about incoming calls.</description>
    <disclaimer lang="en">You need to have an existing CommPortal account.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
